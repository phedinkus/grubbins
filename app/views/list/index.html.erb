<div class='container list'>
  <div ng-controller='RecipeCtrl' ng-init='init(<%= @ingredients.to_json %>)'>
    <div class='list-new'>
      <h1>ingredients found</h1>
      <recipe recipe='recipe'></recipe>
      <ingredient addFn="addToList"></ingredient>
    </div>
  </div>
  <div ng-controller='ListCtrl'>
    <div class='list-existing'>
      <h1>your shopping list</h1>
      <shopping-list-recipe ng-repeat='recipe in recipes' recipe="recipe"></shopping-list-recipe>
      <shopping-list-item ng-repeat="item in items" item="item" ondelete="deleteItem(item, $index)"></shopping-list-item>
    </div>
  </div>
</div>
